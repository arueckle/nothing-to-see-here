{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://adapterhub.ml/architecture.schema.json",
    "type": "object",
    "title": "Adapter-Hub architecture entry",
    "required": [
        "name",
        "displayname",
        "description",
        "citation",
        "config"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1
        },
        "displayname": {
            "type": "string",
            "minLength": 1
        },
        "description": {
            "type": "string"
        },
        "citation": {
            "type": "string"
        },
        "config": {
            "type": "object",
            "additionalProperties": true,
            "minProperties": 1
        }
    }
}
