{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://adapterhub.ml/adapter.schema.json",
    "type": "object",
    "title": "Adapter-Hub adapter entry",
    "required": [
        "model_name",
        "config_id",
        "author",
        "default_version",
        "files",
        "task",
        "subtask",
        "config",
        "hidden_size",
        "model_type",
        "type"
    ],
    "additionalProperties": true,
    "properties": {
        "model_name": {
            "type": "string",
            "minLength": 1
        },
        "config_id": {
            "type": "string",
            "minLength": 16,
            "maxLength": 16
        },
        "author": {
            "type": "string",
            "minLength": 1
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "url": {
            "type": "string",
            "format": "uri"
        },
        "citation": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "default_version": {
            "type": "string"
        },
        "files": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "anyOf": [
                    {
                        "required": [
                            "version",
                            "url",
                            "sha1"
                        ]
                    },
                    {
                        "required": [
                            "version",
                            "url",
                            "sha256"
                        ]
                    }
                ],
                "additionalProperties": false,
                "properties": {
                    "version": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    },
                    "sha1": {
                        "type": "string"
                    },
                    "sha256": {
                        "type": "string"
                    }
                }
            }
        },
        "task": {
            "type": "string",
            "minLength": 1
        },
        "subtask": {
            "type": "string",
            "minLength": 1
        },
        "score": {
            "type": "number"
        },
        "config": {
            "type": "string",
            "minLength": 1
        },
        "hidden_size": {
            "type": "integer"
        },
        "model_type": {
            "type": "string",
            "minLength": 1
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "type": {
            "type": "string",
            "minLength": 1
        }
    }
}