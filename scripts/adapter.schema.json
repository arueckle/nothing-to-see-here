{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://adapterhub.ml/adapter.schema.json",
    "type": "object",
    "title": "Adapter-Hub adapter entry",
    "required": [
        "_meta",
        "config",
        "hidden_size",
        "model_type",
        "name",
        "type"
    ],
    "additionalProperties": false,
    "properties": {
        "_meta": {
            "type": "object",
            "required": [
                "id",
                "author",
                "default_version",
                "files",
                "task",
                "subtask"
            ],
            "additionalProperties": true,
            "properties": {
                "id": {
                    "type": "string",
                    "minLength": 24,
                    "maxLength": 24
                },
                "author": {
                    "type": "string",
                    "minLength": 1
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "citation": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "default_version": {
                    "type": "string"
                },
                "files": {
                    "type": "object",
                    "minProperties": 1,
                    "additionalProperties": false,
                    "patternProperties": {
                        ".*": {
                            "type": "object",
                            "anyOf": [
                                {
                                    "required": [
                                        "url",
                                        "sha1"
                                    ]
                                },
                                {
                                    "required": [
                                        "url",
                                        "sha256"
                                    ]
                                }
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "url": {
                                    "type": "string",
                                    "format": "uri"
                                },
                                "sha1": {
                                    "type": "string"
                                },
                                "sha256": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "task": {
                    "type": "string",
                    "minLength": 1
                },
                "subtask": {
                    "type": "string",
                    "minLength": 1
                },
                "score": {
                    "type": "number"
                }
            }
        },
        "config": {
            "type": ["object", "string"],
            "additionalProperties": true,
            "minProperties": 1,
            "minLength": 1
        },
        "hidden_size": {
            "type": "integer"
        },
        "model_type": {
            "type": "string",
            "minLength": 1
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "type": {
            "type": "string",
            "minLength": 1
        }
    }
}
